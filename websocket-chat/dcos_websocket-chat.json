{
    "id": "websocket-chat",   
    "cpus": 0.1,
    "mem": 128,
    "disk": 512,
    "container": {
        "type": "DOCKER",
        "volumes": [],
        "docker": {
            "image": "wbuchwalter/websocket-chat:latest",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 0,
                    "servicePort": 0
                }
            ]
        }
    },
    "instances": 1,
    "labels":{
        "HAPROXY_GROUP":"external,internal",           
        "HAPROXY_0_MODE":"http",
        "HAPROXY_0_VHOST":"wscagents.westus.cloudapp.azure.com"
    }
}
